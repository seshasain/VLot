<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="411dp"
            android:layout_height="84dp"
            android:background="@drawable/headingbackground"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/inputtextfield"
            android:ems="10"
            android:gravity="center"
            android:hint="\t\tFull name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/number"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputtextfield"
            android:gravity="center"
            android:hint="\t\tMobile number"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <EditText
            android:id="@+id/loginpaswd"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputtextfield"
            android:gravity="center"
            android:hint="\t\tPassword"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginTop="96dp"
            android:background="@drawable/button"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginpsw1" />

        <TextView
            android:id="@+id/TVSignIn"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:text="Already have an account?"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.178"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnlogin" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="328dp"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignEnd="@+id/singup"
            android:layout_alignRight="@+id/singup"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintBottom_toTopOf="@+id/btnlogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.807"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginpsw1"
            app:layout_constraintVertical_bias="0.508">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="127dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue"
                android:checked="false"
                android:scaleX=".8"
                android:scaleY=".8"
                android:text="Vendor"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="0.13"
                android:buttonTint="@color/blue"
                android:checked="false"
                android:scaleX=".8"
                android:scaleY=".8"
                android:text="Customer"
                android:textSize="25dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/singup"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:text="Login"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/TVSignIn"
            app:layout_constraintTop_toBottomOf="@+id/btnlogin" />

        <EditText
            android:id="@+id/loginpsw1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputtextfield"
            android:ems="10"
            android:hint="\t\tConfirm password"
            android:gravity="center"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginpaswd" />

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputtextfield"
            android:ems="10"
            android:gravity="center"
            android:hint="\t\tEmail"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="199dp"
            android:layout_height="106dp"
            android:layout_marginStart="116dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/signupimg" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>